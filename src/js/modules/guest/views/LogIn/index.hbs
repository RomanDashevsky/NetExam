<form class="form-signin">
    <div class="col-xs-offset-1 col-xs-10">
        <div class="form-group">
            <legend>Пожалуйста, введите данные</legend>
        </div>
        <div class="form-group label-floating">
            <label for="loginInput" class="control-label">Логин</label>
            <input type="text" id="loginInput" class="form-control" name="login" maxlength="50" required autofocus />
            <span class="help-block hidden"></span>
        </div>
        <div class="form-group label-floating">
            <label for="passwordInput" class="control-label">Пароль</label>
            <input type="password" id="passwordInput" class="form-control" name="password" maxlength="50" required />
            <span class="help-block hidden"></span>
        </div>
        <button class="btn btn-lg btn-primary btn-block btn-raised linkRole" type="submit">Войти</button>
    </div>
</form>
