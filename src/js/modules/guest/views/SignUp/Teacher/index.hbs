<form class="form-horizontal" role="form">
    <div class="col-xs-offset-1 col-xs-10">
        <div class="form-group">
            <legend>РЕГИСТРАЦИЯ ПРЕПОДАВАТЕЛЯ</legend>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-offset-1 col-xs-10">
            <!--Фамилия-->
            <div class="form-group label-floating">
                <label for="surnameInput" class="control-label">Фамилия</label>
                <input type="text" class="form-control" id="surnameInput" name="lastName" required maxlength="50">
                <span class="help-block hidden"></span>
            </div>

            <!--Имя-->
            <div class="form-group label-floating">
                <label for="nameInput" class="control-label">Имя</label>
                <input type="text" class="form-control" id="nameInput" name="firstName" required maxlength="50">
                <span class="help-block hidden"></span>
            </div>

            <!--Отчество-->
            <div class="form-group label-floating">
                <label for="patronymicInput" class="control-label">Отчество</label>
                <input type="text" class="form-control" id="patronymicInput" name="patronymic" required maxlength="50">
                <span class="help-block hidden"></span>
            </div>

            <!--Кафедра-->
            <div class="form-group label-floating">
                <label for="departmentInput" class="control-label">Кафедра</label>
                <input type="text" class="form-control" id="departmentInput" name="department" required maxlength="50">
                <span class="help-block hidden"></span>
            </div>

            <!--Должность-->
            <div class="form-group label-floating">
                <label for="positionInput" class="control-label">Должность</label>
                <input type="text" class="form-control" id="positionInput" name="position"  required maxlength="50">
                <span class="help-block hidden"></span>
            </div>

            <!--Имя пользователя-->
            <div class="form-group label-floating">
                <label for="loginInput" class="control-label">Имя пользователя</label>
                <input type="text" class="form-control" id="loginInput" name="login"  required maxlength="50">
                <span class="help-block hidden"></span>
            </div>

            <!--Пароль-->
            <div class="form-group label-floating">
                <label for="passwordInput" class="control-label">Пароль</label>
                <input type="password" class="form-control" id="passwordInput" name="password" required maxlength="50">
                <span class="help-block hidden"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-offset-1 col-xs-10">
            <button type="submit" class="btn btn-primary btn-block btn-raised">Регистрация</button>
        </div>
    </div>
</form>
